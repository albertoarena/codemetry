{
    "name": "codemetry/laravel",
    "description": "Laravel adapter for Codemetry analysis pipeline",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "codemetry/core": "^1.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "orchestra/testbench": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Codemetry\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codemetry\\Laravel\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Codemetry\\Laravel\\CodemetryServiceProvider"
            ]
        }
    }
}
